<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Sombra difusa -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F9F9F9" /> <!-- Color gris claro para el borde desenfocado -->
            <corners android:radius="8dp" /> <!-- Bordes redondeados -->
            <padding
                android:top="2dp"
                android:left="2dp"
                android:bottom="2dp"
                android:right="2dp" />
        </shape>
    </item>

    <!-- Fondo blanco del EditText -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Fondo blanco -->
            <corners android:radius="8dp" /> <!-- Bordes redondeados -->
        </shape>
    </item>
</layer-list>