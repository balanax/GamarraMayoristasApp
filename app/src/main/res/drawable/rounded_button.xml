<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Color de fondo del botón -->
    <solid android:color="#DB3022" />

    <!-- Borde del botón -->
    <stroke
        android:width="5dp"
        android:color="#DB3022" />

    <!-- Bordes redondeados -->
    <corners android:radius="16dp" />

    <!-- Espaciado interno del botón -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>