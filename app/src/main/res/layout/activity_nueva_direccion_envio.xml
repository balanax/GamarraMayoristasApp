<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pago.NuevaDireccionEnvio">




    <LinearLayout
        android:id="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F9F9F9"
        >

        <Button
            android:id="@+id/btnRegresar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="AÃ‘ADIR DIRECCION ENVIO"
            android:drawableLeft="@drawable/baseline_arrow_left_24"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:elevation="4dp"
            android:backgroundTint="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="1dp"
            tools:ignore="MissingConstraints"
            />


        <EditText
            android:id="@+id/etNombreCompleto"
            android:background="@drawable/edittext_shadow"
            android:layout_marginBottom="10dp"
            android:layout_width="368dp"
            android:layout_height="64dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:elevation="2dp"
            android:hint="Nombre Completo"
            android:inputType="text"
            android:minHeight="48dp"
            android:padding="18dp"
            android:selectAllOnFocus="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnRegresar"
            />

        <EditText
            android:id="@+id/etDireccion"
            android:background="@drawable/edittext_shadow"
            android:layout_marginBottom="10dp"
            android:layout_width="368dp"
            android:layout_height="64dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="24dp"
            android:elevation="2dp"
            android:hint="Direccion"
            android:inputType="text"
            android:minHeight="48dp"
            android:padding="18dp"
            android:selectAllOnFocus="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etNombreCompleto" />

        <EditText
            android:id="@+id/etRegion"
            android:background="@drawable/edittext_shadow"
            android:layout_marginBottom="10dp"
            android:layout_width="368dp"
            android:layout_height="64dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:elevation="2dp"
            android:hint="Region"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:minHeight="48dp"
            android:padding="18dp"
            android:selectAllOnFocus="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etDireccion"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/etDistrito"
            android:background="@drawable/edittext_shadow"
            android:layout_marginBottom="10dp"
            android:layout_width="368dp"
            android:layout_height="64dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:elevation="2dp"
            android:hint="Provincia"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:minHeight="48dp"
            android:padding="18dp"
            android:selectAllOnFocus="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etRegion"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/etProvincia"
            android:background="@drawable/edittext_shadow"
            android:layout_marginBottom="10dp"
            android:layout_width="368dp"
            android:layout_height="64dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:elevation="2dp"
            android:hint="Distrito"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:minHeight="48dp"
            android:padding="18dp"
            android:selectAllOnFocus="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etDistrito"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/etCodigoPostal"
            android:background="@drawable/edittext_shadow"
            android:layout_marginBottom="40dp"
            android:layout_width="368dp"
            android:layout_height="64dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:elevation="2dp"
            android:hint="Codigo Postal"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:minHeight="48dp"
            android:padding="18dp"
            android:selectAllOnFocus="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etProvincia"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnRegistrarDireccion"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="end|bottom"
            android:layout_marginStart="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="48dp"
            android:enabled="true"
            android:padding="5dp"
            android:text="GUARDAR DIRECCION"
            android:textSize="16dp"
            android:background="@drawable/rounded_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/etCodigoPostal" />


    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>