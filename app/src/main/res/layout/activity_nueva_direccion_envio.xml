<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pago.NuevaDireccionEnvio">


    <Button
        android:id="@+id/btn_ahora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:enabled="true"
        android:backgroundTint="#DB3022"
        android:text="GUARDAR DIRECCION"
        android:textAllCaps="false"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="622dp" />

    <LinearLayout
        android:id="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <Button
            android:id="@+id/btnNuevaTarjeta"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:backgroundTint="#FFFFFF"
            android:drawableLeft="@drawable/baseline_arrow_left_24"
            android:elevation="4dp"
            android:text="Añadir dirección de envio"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_ahora"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="1dp" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>