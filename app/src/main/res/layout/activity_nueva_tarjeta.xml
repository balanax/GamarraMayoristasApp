<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pago.NuevaTarjeta">

    <LinearLayout
        android:id="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F9F9F9"
        >

        <Button
            android:id="@+id/btnRegresar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Añadir nueva tarjeta"
            android:drawableLeft="@drawable/baseline_arrow_left_24"
            android:textColor="@color/black"
            android:elevation="4dp"
            android:textSize="18sp"
            android:backgroundTint="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="1dp"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/etNombre"
            android:background="@drawable/edittext_shadow"
            android:layout_marginBottom="10dp"
            android:layout_width="368dp"
            android:layout_height="64dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:elevation="2dp"
            android:hint="Nombre en la tarjeta"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:padding="18dp"
            android:selectAllOnFocus="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnRegresar" />

        <EditText
            android:id="@+id/etTarjeta"
            android:background="@drawable/edittext_shadow"
            android:layout_marginBottom="10dp"
            android:layout_width="368dp"
            android:layout_height="64dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="24dp"
            android:elevation="2dp"
            android:hint="Numero de tarjeta"
            android:inputType="number"
            android:maxLength="19"
            android:minHeight="48dp"
            android:padding="18dp"
            android:selectAllOnFocus="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etNombre" />

        <EditText
            android:id="@+id/etFechaExpiracion"
            android:background="@drawable/edittext_shadow"
            android:layout_marginBottom="40dp"
            android:layout_width="368dp"
            android:layout_height="64dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:elevation="2dp"
            android:hint="Fecha de Expiración"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:minHeight="48dp"
            android:padding="18dp"
            android:selectAllOnFocus="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etTarjeta"
            tools:ignore="MissingConstraints" />


        <Button
            android:id="@+id/btnRegistrarTarjeta"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="start"
            android:layout_marginStart="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="48dp"
            android:enabled="true"
            android:padding="5dp"
            android:text="AÑADIR TARJETA"
            android:textSize="16dp"
            android:background="@drawable/rounded_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etFechaExpiracion" />



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>