<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/gray"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txtOrden"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="8dp"
        android:text="Orden Nro.: "
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtNroOrden"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="####"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtFecha"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginStart="290dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="xx-xx-xxxx"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtTraking"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="8dp"
        android:text="Nro. Traking:  "
        android:textColor="@color/black"
        android:textSize="12sp"
         />

    <TextView
        android:id="@+id/txtNroTraking"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="92dp"
        android:layout_marginBottom="8dp"
        android:text="XXXXXXXXX"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/txtCant"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginTop="52dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="8dp"
        android:text="Cantidad:  "
        android:textColor="@color/black"
        android:textSize="12sp"
         />

    <TextView
        android:id="@+id/txtCantidad"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginTop="52dp"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="8dp"
        android:text="XX"
        android:textColor="@color/black"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/txtTotal"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginTop="52dp"
        android:layout_marginStart="230dp"
        android:layout_marginBottom="8dp"
        android:text="TOTAL:  "
        android:textColor="@color/black"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/txtMonto"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginTop="52dp"
        android:layout_marginStart="290dp"
        android:layout_marginBottom="8dp"
        android:text="S/. xxx.xxx  "
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/txtEstado"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginTop="78dp"
        android:layout_marginStart="290dp"
        android:layout_marginBottom="8dp"
        android:text="Entregado"
        android:textColor="@color/teal_700"
        android:textSize="14sp"
        android:textStyle="bold"
        />

</androidx.cardview.widget.CardView>